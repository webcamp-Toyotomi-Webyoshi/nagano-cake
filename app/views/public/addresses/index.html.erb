<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 mb-3">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <p class="text-success mt-3"></p><%= flash[:success] %>
            <h2 class="font-weight-bold mt-5 mb-5 mx-3">Address</h2>
          </div>
        </div>
      </div>
      <%= form_for @address, url: addresses_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label "郵便番号（ハイフンなし）" %>
        <%= f.text_field :post_cord, placeholder: "0000000(半角)", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "住所" %>
        <%= f.text_field :address, placeholder: "東京都葛飾区亀有3-49-3 アリオ亀有3F", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "宛名" %>
        <%= f.text_field :name, placeholder: "両津勘吉", class:"form-control"  %>
      </div>
        <%= f.submit "新規登録" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <table class="table table-cordered mt-5">
        <thead class="table-dark">
          <tr>
            <th class="border" style="width: 10%">郵便番号</th>
            <th class="border" style="width: 40%">住所</th>
            <th class="border" style="width: 25%">宛名</th>
            <th class="border" style="width: 20%"></th>
          </tr>
        </thead>
        <tbody id="address">
        <% @addresses.each do |address| %>
          <tr>
            <th><%= address.post_cord %></th>
            <th><%= address.address %></th>
            <th><%= address.name %></th>
            <th>
              <%= link_to "編集する", edit_address_path(address), local: true, class: "btn btn-sm btn-success mr-3" %>
              <%= link_to "削除する", address_path(address), method: :delete, local: true, class: "btn btn-sm btn-danger" %>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>