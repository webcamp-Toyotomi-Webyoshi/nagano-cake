<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0 mb-3">
      <div class="container">
        <div class="row">
          <div class="col-xs-3">
            <h2 class="font-weight-bold mt-5 mb-5 mx-3">Edit address</h2>
          </div>
        </div>
      </div>
      <%= form_for(@address, url: address_path(@address.id)) do |f| %>
      <div class="form-group">
        <%= f.label "郵便番号（ハイフンなし）" %>
        <%= f.text_field :post_cord, :maxlength => 7, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "住所" %>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "宛名" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
        <%= f.submit "変更内容を保存" %>
      <% end %>
    </div>
  </div>
</div>