<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="text-center mt-5">ショッピングカート</h3>
    </div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger mt-5" %>
    </div>
  </div>
  <table class="table mt-2">
    <thead class="table-light" style="background-color: #FAFAD2;">
      <tr>
        <th></th>
        <th>商品名</th>
        <th>税込価格</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, size:"50x50" %></td>
        <td><%= cart_item.item.name%></td>
        <td>￥<%= cart_item.item.add_tax_price.to_s %></td>
        <td>
          <%= form_for(cart_item) do |f|%>
            <%= f.number_field :amount, placeholder: "個数選択", min: 1 %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>￥<%= cart_item.amount * cart_item.item.add_tax_price %></td>
        <% @sum += cart_item.amount * cart_item.item.add_tax_price %>
        <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-sm">
      <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
    </div>
    <div class="col-sm"></div>
    <div class="col-sm"></div>
    <div class="col-sm mt-2">
      <h5>合計金額　　￥<%= @sum %></h5>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto mt-3">
      <% if current_customer.cart_items.present? %>
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>