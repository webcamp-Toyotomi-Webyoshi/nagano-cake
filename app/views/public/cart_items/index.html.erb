<div class="container">
  <h2 class="mt-5">ショッピングカート</h2>
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class:"btn btn-danger" %>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th></th>
        <th>商品名</th>
        <th>税込価格</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= attachment_image_tag cart_item.item, :image, size:"50x50" %></td>
        <td><%= cart_item.item.name%></td>
        <td><%= cart_item.item.add_tax_price.to_s %></td>
        <td>
          <%= form_for(cart_item) do |f|%>
            <%= f.number_field :amount, placeholder: "個数選択", min: 1 %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td><%= cart_item.amount * cart_item.item.add_tax_price %></td>
        <% @sum += cart_item.amount * cart_item.item.add_tax_price %>
        <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h5>合計金額　　<%= @sum %></h5>
  <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
  <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
</div>