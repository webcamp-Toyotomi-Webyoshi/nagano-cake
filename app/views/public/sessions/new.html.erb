<div class="container">
  <h2 class="mt-5">Log in</h2>
  <div class="row">
    <%= flash[:error] %>
    <div class="col-sm">
      <img class="card-img mt-3" src="https://omotesando-info.com/webmagazine/wp-content/uploads/01_FE-XMAS-CAKE2.jpg" alt="">
    </div>
    <div class="col-sm">
      <form class="mt-3" style="width: 500px;">
        <div class="mb-3">
          <%= form_for(resource, as: resource_name, url: customers_sign_in_path) do |f| %>
          <div class="form-group">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="field">
            <%= f.label :password, class:"form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>
        </div>

          <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
          <% end %>
          <div class="mb-3">
            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
        <%= render "publics/shared/links" %>
      </form>
    </div>
  </div>
</div>