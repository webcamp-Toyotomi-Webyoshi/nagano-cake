<div class="main">
  <h2>注文情報入力</h2>
  <%= form_for @order, url: orders_path, local: true do |f| %>
    <string>支払い方法</string>
      <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
      <span>クレジットカード</span>
      <%= f.radio_button :payment_method, :"銀行振込" %>
      <span>銀行振込</span>

    <string>お届け先</string>
      <%= f.radio_button :address, "address", checked: true %>
      <span>ご自身の住所</span>
      ///ログインユーザーの登録住所///
      <%= f.radio_button :address, "address" %>
      <span>登録先住所から選択</span>
      ///郵便番号・登録住所・宛先名一覧///
      <%= f.radio_button :address, "address" %>
      <span>新しいお届け先</span>
      <%= f.label :"郵便番号（ハイフンなし）" %>
      <%= f.text_field :post_cord, placeholder: "0000000", :maxlength => 7 %>

      <%= f.label :"住所" %>
      <%= f.text_field :address, placeholder: "東京都葛飾区亀有3-49-3 アリオ亀有3F" %>

      <%= f.label :"宛名" %>
      <%= f.text_field :name, placeholder: "両津勘吉" %>

      <%= f.submit "確認画面に進む" %>
  <% end %>
</div>