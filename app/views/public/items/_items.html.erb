  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% items.each do |item| %>
    <div class="col mb-4">
      <div class="card h-100 ml-5 shadow-lg p-2 mb-5 bg-white rounded" style="width: 250px;">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, size:"200x200", class:"card-img-top" %>
        <div class="card-body" style="height:50px;">
          <h5 class="card-title"><p class="text-dark"><%= item.name %></p></h5>
        <% end %>
          <% if item.is_active == true %>
            <p class="card-text">￥<%= item.price %></p>
          <% elsif item.is_active == false %>
            <p class="card-text text-muted">売り切れ中</p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>