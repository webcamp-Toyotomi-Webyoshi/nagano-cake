<div class="container">
  <h2 class="mt-5">Sign up</h2>
  <div class="row">
    <div class="col-sm">
      <%= form_for(resource, as: resource_name, url: customers_path) do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"姓", class:"form-label" %>　/　<%= f.label :"名", class:"form-label" %><br />
            <%= f.text_field :first_name, autofocus: true %>　<%= f.text_field :last_name, autofocus: true %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"セイ" %>　/　<%= f.label :"メイ" %><br />
            <%= f.text_field :first_name_kana, autofocus: true %>　<%= f.text_field :last_name_kana, autofocus: true %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"郵便番号", :maxlength => 7 %><br />
            <%= f.text_field :post_cord, autofocus: true, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"住所" %><br />
            <%= f.text_field :address, autofocus: true, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"電話番号（ハイフンなし）" %><br />
            <%= f.text_field :telephone, autofocus: true, class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary mb-3" %>
        </div>
        <% end %>
        <%= render "publics/shared/links" %>
    </div>
    <div class="col-sm">
      <img class="card-img" src="https://omotesando-info.com/webmagazine/wp-content/uploads/kihachi-aoyama-miyazakimangopie-202107-2.jpg" alt="">
    </div>
  </div>
</div>
