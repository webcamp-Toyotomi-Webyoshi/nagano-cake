<div class="container">
  <h2 class="mt-5">ジャンル編集</h2>
  <div class="form-items" style="max-width: 300px;">
    <%= form_for(@genre, url:admin_genre_path) do |f| %>
      <%= f.label :"ジャンル名" %>
      <%= f.text_field :name, class:"form-control mb-2" %>
