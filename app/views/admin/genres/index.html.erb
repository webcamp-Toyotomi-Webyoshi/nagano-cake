<h2>ジャンル一覧・追加</h2>
<div class="genre-create">
  <%= form_for(@genre, url: admin_genres_path) do |f| %>
    <%= f.label :"ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit :新規登録 %>
  <% end %>
</div>
<table class="genre-index">
  <thead>
    <tr class="info">
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する",edit_admin_genre_path(genre) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
