<div class="container">
  <h2 class="mt-5">ジャンル一覧・追加</h2>
  <div class="form-group" style="max-width: 300px;">
    <%= form_for(@genre, url: admin_genres_path) do |f| %>
      <%= f.label :"ジャンル名" %>
      <%= f.text_field :name, class:"form-control"%>
      <%= f.submit :新規登録, class:"btn btn-success mt-2" %>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr class="info">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する",edit_admin_genre_path(genre), class:"btn btn-success" %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
