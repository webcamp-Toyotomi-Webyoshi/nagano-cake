<h2>商品詳細</h2>
<%= attachment_image_tag @item, :image %>
<div class="item-show">
  <p>商品名</p>
  <%= @item.name %>
</div>
<div class="item-show">
  <p>商品説明</p>
  <%= @item.introduction %>
</div>
<div class="item-show">
  <p>ジャンル</p>
  <%= @item.genre.name %>
</div>
<div class="item-show">
  <p>税込価格/税抜価格</p>
  <%= @item.add_tax_price.to_s %>（<%= @item.price %>）円
</div>
<div class="item-show">
  <p>販売ステータス</p>
  <% if @item.is_active == true %>
    <td>販売中</td>
  <% elsif @item.is_active == false %>
    <td>販売停止中</td>
  <% end %>
</div>
<div class="item-show">
  <%= link_to "編集する", edit_admin_item_path(@item.id) %>
</div>
