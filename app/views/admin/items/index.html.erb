<h2>商品一覧</h2>

<table>
  <thead>thsrhshs
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id)%></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td></td>
        <% if item.is_active == true %>
          <td>販売中</td>
        <% elsif item.is_active == false %>
          <td>販売停止中</td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>