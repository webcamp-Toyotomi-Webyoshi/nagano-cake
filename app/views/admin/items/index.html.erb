<div class="container">
  <h2 class="mt-5">商品一覧<%= link_to "Add", new_admin_item_path, class:"btn btn-success float-right" %></h2>
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th></th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class:"text-dark"%></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td></td>
          <% if item.is_active == true %>
            <td class="text-success">販売中</td>
          <% elsif item.is_active == false %>
            <td class="text-muted">販売停止中</td>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>
