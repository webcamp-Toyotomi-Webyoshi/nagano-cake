<div class="col-md-8 offset-md-1">
        <h2>会員一覧</h2>

          <table class="table table-hover table-inverse">

            <thead>

              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>

            </thead>

            <tbody>
            <% @customers.each do |customer| %>

              <tr>

                <td>
                  <%= customer.id %>
                </td>

                <td>
                  <%= link_to customer.full_name, edit_admin_customer_path(customer.id) %>
                </td>
                <td>
                  <%= customer.email %>
                </td>

              </tr>

            </tbody>
            <% end %>