<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th></th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_items.item_quantity %></td>
      <td>order.order_status</td>

    </tr>
    <% end %>
  </tbody>
</table>