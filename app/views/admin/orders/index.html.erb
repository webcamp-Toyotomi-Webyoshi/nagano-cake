<div class="container">
<h2 class="mt-5">注文履歴一覧</h2>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order.id), class:"text-dark" %></td>
      <td><%= order.customer.full_name %></td>
      <td><%= order.order_items.sum(:item_quantity) %></td>
      <td><%= order.order_status %></td>

    </tr>
    <% end %>
  </tbody>
</table>
</div>